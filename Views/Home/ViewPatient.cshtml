
@model DetailFormViewModel
@{
    ViewData["Title"] = "View Patient Data";
}

<div class="container d-flex flex-column align-items-center">
    <h1>View Patient</h1>
    <p>@Model.Patient.LastName, @Model.Patient.FirstName</p>
    <div class="w-50">
        @await Html.PartialAsync("_DetailForm", Model)
    </div>
    <div class="text-end w-50">
        <a href="/patients/edit/@Model.Patient.PatientKey" class="btn btn-secondary w-25">Edit</a>
    </div>
</div>